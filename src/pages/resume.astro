---
import { SITE } from "@/config";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";

const resumePDF = "/resume.pdf";
---

<Layout title={`Resume | ${SITE.title}`}>
  <Header activeNav="resume" />

  <main
    id="main-content"
    class="flex flex-col items-center justify-center px-4 py-8"
  >
    <h1 class="text-3xl font-bold mb-4">Resume</h1>

    <LinkButton
      href={resumePDF}
      class="mb-6 text-lg underline decoration-dashed underline-offset-8 hover:opacity-80 transition-opacity"
    >
      Download the PDF
    </LinkButton>

    <iframe
      src={resumePDF}
      title="My Resume"
      class="block w-full max-w-3xl h-screen border-none mx-auto"
    >
      This browser does not support PDFs.
    </iframe>
  </main>

  <Footer />
</Layout>
